<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ViewComponentEDU</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Navigate" asp-action="Main">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Navigate" asp-action="Page1">Страница 1</a>
                    </li>
                    <li class="nav-item">

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Navigate" asp-action="Page2">Страница 2</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid">

        <div class="row flex-xl-nowrap">
            @if (IsSectionDefined("VertPanel"))
            {
                <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
                    @RenderSection("VertPanel")
                </div>
            }
            <main class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5 bd-content" role="main">
                @RenderBody()
            </main>

        </div>

    </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - ViewComponentEDU - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
